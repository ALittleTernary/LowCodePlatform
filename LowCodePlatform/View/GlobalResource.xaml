<Window x:Class="LowCodePlatform.View.GlobalResource"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LowCodePlatform.View"
             mc:Ignorable="d"
             WindowStyle="None"
             WindowStartupLocation="CenterScreen"
             Height="800" Width="1300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Custom Window" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" Grid.Column="0"/>

            <Button x:Name="Button_MinWindow" 
                    Content="最小化"
                    Width="50"
                    Grid.Column="1"
                    Background="Transparent"
                    Margin="5"/>

            <Button x:Name="Button_MaxWindow" 
                    Content="最大化" 
                    Width="50"
                    Grid.Column="2"
                    Background="Transparent"
                    Margin="5"/>

            <Button x:Name="Button_HideWindow" 
                    Content="关闭" 
                    Width="50"
                    Grid.Column="3"
                    Background="Transparent"
                    Margin="5"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button x:Name="Button_Add" 
                        Content="新增"
                        Grid.Column="0"
                        Margin="10">
                        <Button.ContextMenu>
                            <!-- 定义菜单 -->
                            <ContextMenu x:Name="ContextMenu_Add"/>
                        </Button.ContextMenu>
                    </Button>

                    <Button x:Name="Button_Sub" 
                        Content="删除"
                        Grid.Column="1"
                        Margin="10"/>

                    <Button x:Name="Button_Rename" 
                        Content="重命名"
                        Grid.Column="2"
                        Margin="10"/>
                </Grid>

                <DataGrid x:Name ="DataGrid_Resource"  
                     Grid.Row="1"
                     Background="Transparent"
                     IsReadOnly="False"
                     CanUserAddRows="False"
                     CanUserSortColumns="False"
                     AutoGenerateColumns="False">

                    <DataGrid.Columns>
                        <DataGridTextColumn 
                        Header="序号" 
                        IsReadOnly="True" 
                        Binding="{Binding SerialNum}" 
                        Width="Auto"/>
                        <DataGridCheckBoxColumn 
                        Header="状态" 
                        IsReadOnly="True" 
                        Binding="{Binding ResStatus}" 
                        Width="Auto"/>
                        <DataGridTextColumn 
                        Header="名字" 
                        IsReadOnly="True" 
                        Binding="{Binding ResName}" 
                        Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <!-- 分隔条 -->
            <GridSplitter 
            Grid.Column="1" 
            Width="5" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch" 
            ResizeDirection="Columns" 
            Background="Transparent" />

            <GroupBox Grid.Column="2">
                <Grid x:Name="Grid_Resource">
                    <TabControl x:Name="TabControl_Resource" 
                        Background="Transparent" 
                        BorderThickness="0"/>
                </Grid>
            </GroupBox>
        </Grid>


    </Grid>
</Window>
