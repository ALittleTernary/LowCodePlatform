<UserControl x:Class="LowCodePlatform.View.LogArea"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LowCodePlatform.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <RadioButton x:Name="RadioButton_Verbose" 
                         Content="所有"
                         IsChecked="True"
                         Grid.Column="0"
                         VerticalContentAlignment="Center"/>
            <RadioButton x:Name="RadioButton_Warning" 
                         Content="警告" 
                         Grid.Column="1"
                         VerticalContentAlignment="Center"/>
            <RadioButton x:Name="RadioButton_Error" 
                         Content="错误" 
                         Grid.Column="2"
                         VerticalContentAlignment="Center"/>
            <Button x:Name="Button_ClearLogShow" 
                    Content="清除显示"
                    Grid.Column="3"
                    Margin="5"/>
        </Grid>

        <DataGrid x:Name="DataGrid_Logger" 
                  Grid.Row="1" 
                  BorderThickness="0" 
                  Background="Transparent"
                  IsReadOnly="False"
                  CanUserAddRows="False"
                  CanUserSortColumns="False"
                  AutoGenerateColumns="False"
                  RowHeight="25">

            <DataGrid.Columns>
                <DataGridTextColumn 
                    Header="时间" 
                    IsReadOnly="True" 
                    Binding="{Binding Time}" 
                    Width="Auto"/>
                <DataGridTextColumn 
                    Header="等级" 
                    IsReadOnly="True" 
                    Binding="{Binding Level}" 
                    Width="Auto"/>
                <DataGridTextColumn 
                    Header="内容" 
                    IsReadOnly="False" 
                    Binding="{Binding Content}" 
                    Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
